{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AAS access rules",
  "type": "object",
  "properties": {
    "select": {
      "type": "string",
      "pattern": "^id$"
    },
    "filter": {
      "$ref": "common-json-schema.json#/definitions/logicalExpression"
    },
    "option": {
      "$ref": "#/definitions/OptionStatement"
    },
    "$schema": {
      "type": "string"
    }
  },
  "required": ["filter"],
  "additionalProperties": false,
  "definitions": {
    "OptionStatement": {
      "properties": {
        "sort": {
          "type": "object",
          "properties": {
            "id": {
              "type": "string",
              "enum": [
                "asc",
                "dsc"
              ]
            }
          }
        },
        "limit": {
          "type": "number"
        },
        "offset": {
          "type": "number"
        }
      },
      "additionalProperties": false
    }
  }
}