{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "AAS access rules",
    "type": "object",
    "properties": {
      "AllRules": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "ATTRIBUTES": {
              "type": "array",
              "items": {
                "$ref": "common-json-schema.json#/definitions/attributeItem"
              }
            },
            "RIGHTS": {
              "type": "array",
              "items": {
                "$ref": "common-json-schema.json#/definitions/rightsEnum"
              }
            },
            "ACCESS": {
              "type": "string",
              "enum": [
                "ALLOW",
                "DISABLED"
              ]
            },
            "OBJECTS": {
              "type": "array",
              "items": {
                "$ref": "common-json-schema.json#/definitions/objectItem"
              }
            },
            "FORMULA": {
              "$ref": "common-json-schema.json#/definitions/logicalExpression"
            }
          },
          "required": [
            "ATTRIBUTES",
            "RIGHTS",
            "ACCESS",
            "OBJECTS",
            "FORMULA"
          ]
        },
        "additionalProperties": false
      }
    },
    "additionalProperties": false
  }
  